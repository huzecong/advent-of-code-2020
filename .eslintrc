{
  "extends": [
    "oclif",
    "oclif-typescript"
  ],
  "plugins": [
    "simple-import-sort"
  ],
  "rules": {
    "valid-jsdoc": "off",
    "sort-imports": "off",
    "import/order": "off",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "new-cap": [
      "warn",
      {
        "capIsNewExceptions": [
          "BigInt"
        ]
      }
    ],
    "no-mixed-operators": [
      "warn",
      {
        "groups": [
          [
            "&",
            "|",
            "^",
            "~",
            "<<",
            ">>",
            ">>>"
          ],
          [
            "==",
            "!=",
            "===",
            "!==",
            ">",
            ">=",
            "<",
            "<="
          ],
          [
            "&&",
            "||"
          ],
          [
            "in",
            "instanceof"
          ]
        ]
      }
    ]
  }
}
